@model Product
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-7">
    <section class="panel">
        <div class="panel-body">
            <div class="col-xl-4">
                <div class="pro-img-details">
                    <img src="@Model.ImagePath" alt="" style="width:auto;height:auto;" />
                </div>

                <div class="panel-body">
                    <div class="table table-hover">
                        <table>
                            <thead>
                                <tr>
                                    <th>Ürün ID</th>
                                    <th>Ürün İsmi</th>
                                    <th>Ürün İçeriği</th>
                                    <th>Ürün Fiyatı</th>
                                    
                                    <th>Ürün Menüde Mi?</th>
                                    <th>Ürünün Mutfağı</th>
                                </tr>
                            </thead>
                            <tbody>
                               
                                <tr class="gradeX">
                                    <td>@Model.ID</td>
                                    <td>@Model.ProductName </td>
                                    <td>@Model.ProductContent</td>
                                    <td>@Model.UnitPrice</td>
                                    
                                    <td>@Model.IsAvailable</td>
                                    @switch (Model.ProductRegion)
                                    {
                                        case Project.MODEL.Enum.Region.Marmara:
                                            <td>"Marmara"</td>;
                                            break;
                                        case Project.MODEL.Enum.Region.Akdeniz:
                                            <td>"Akdeniz"</td>;
                                            break;
                                        case Project.MODEL.Enum.Region.Ege:
                                            <td>"Ege"</td>;
                                            break;
                                        case Project.MODEL.Enum.Region.IcAnadolu:
                                            <td>"İç Anadolu"</td>;
                                            break;
                                        case Project.MODEL.Enum.Region.Dogu:
                                            <td>"Doğu Anadolu"</td>;
                                            break;
                                        case Project.MODEL.Enum.Region.Guneydogu:
                                            <td>"Güneydoğu Anadolu"</td>;
                                            break;
                                        case Project.MODEL.Enum.Region.Karadeniz:
                                            <td>"Karadeniz"</td>;
                                            break;
                                    }

                                </tr>


                                
                            </tbody>
                        </table>

                    </div>
                </div>

                <div class="pro-img-list">
                    <a href="#">
                        <img src="img/product-list/pro-thumb-1.jpg" alt="">
                    </a>
                    <a href="#">
                        <img src="img/product-list/pro-thumb-2.jpg" alt="">
                    </a>
                    <a href="#">
                        <img src="img/product-list/pro-thumb-3.jpg" alt="">
                    </a>
                    <a href="#">
                        <img src="img/product-list/pro-thumb-1.jpg" alt="">
                    </a>
                </div>
            </div>

            <div class="col-md-6">
                <h4 class="pro-d-title">
                    <a href="#" class="">
                        @Model.ProductName
                    </a>
                </h4>
                <p>
                    Praesent ac condimentum felis. Nulla at nisl orci, at dignissim dolor, The best product descriptions address your ideal buyer directly and personally. The best product descriptions address your ideal buyer directly and personally.
                </p>
                @if (Model.SubCategoryID == null)
                {
                    <div class="product_meta">
                        <span class="posted_in"> <strong>Kategori:</strong> @Html.ActionLink(Model.Category.CategoryName, "CategoryDetail", "Category", new { id = Model.CategoryID }, new { @class = "" })</span>
                        <br />
                        <span class="posted-in">@Html.ActionLink("Ürün Listesi", "ProductList", "Product", null, new { @clasS = "btn btn-round btn-primary" })</span>
                    </div>
                }
                else
                {
                    <div class="product_meta">
                        <span class="posted_in"> <strong>Kategori:</strong> @Html.ActionLink(Model.SubCategory.SubName, "SubCategoryDetail", "SubCategory", new { id = Model.SubCategoryID }, new { @class = "" })</span>
                        <br />
                        <span class="posted-in">@Html.ActionLink("Ürün Listesi", "ProductList", "Product", null, new { @clasS = "btn btn-round btn-primary" })</span>
                    </div>
                }


                <p>
                    @Html.ActionLink("Guncelle", "UpdateProduct", "Product", new { id = Model.ID }, new { @class = "btn btn-round btn-warning" })

                </p>
            </div>
        </div>
    </section>
    <section class="panel">
        <header class="panel-heading tab-bg-dark-navy-blue">
            <ul class="nav nav-tabs ">
                <li class="active">
                    <a data-toggle="tab" href="#description">
                        Description
                    </a>
                </li>

            </ul>
        </header>
        <div class="panel-body">
            <div class="tab-content tasi-tab">
                <div id="description" class="tab-pane active">
                    <h4 class="pro-d-head">Ürün Açıklaması</h4>
                    <p> Praesent ac condimentum felis. Nulla at nisl orci, at dignissim dolor, The best product descriptions address your ideal buyer directly and personally. The best product descriptions address your ideal buyer directly and personally. </p>
