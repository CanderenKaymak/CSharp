@model Category
@{
    ViewBag.Title = "CategoryDetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-xl-7">
    <section class="panel">
        <div class="panel-body">
            <div class="col-xl-4">
                <div class="pro-img-details">
                    <img src="@Model.ImagePath" alt="" style="width:auto;height:auto;" />
                </div>

                <div class="panel-body">
                    <div class="table table-hover">
                        <table>
                            @if (Model.Products.Exists(x => x.SubCategoryID == null))
                            {
                                <thead>
                                    <tr>
                                        <th>Ürün İsmi</th>
                                        <th>Ürün İçeriği</th>
                                        <th>Ürün Fiyatı</th>
                                        <th>Ürün Durumu</th>
                                    </tr>
                                </thead>


                                <tbody>
                                    @foreach (Product ditem in Model.Products)
                                    {
                                        <tr class="gradeX">
                                            <td>@Html.ActionLink(ditem.ProductName, "ProductDetail", "Product", new { id = ditem.ID }, new { @class = "" })</td>
                                            <td>@ditem.ProductContent</td>
                                            <td>@ditem.UnitPrice</td>
                                            @if (Convert.ToBoolean(ditem.IsAvailable))
                                            {
                                                <td>Ürün Menüde</td>
                                            }
                                            else
                                            {
                                                <td>Ürün Menüde Yok</td>
                                            }
                                        </tr>
                                    }
                                </tbody>

                            }
                            else
                            {
                                <thead>
                                    <tr>
                                        <th>Alt Kategori İsmi</th>
                                        <th>Alt Kategori Açıklaması</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (SubCategory item in Model.SubCategories)
                                    {
                                        <tr class="gradeX">
                                            <td>@Html.ActionLink(item.SubName, "SubCategoryDetail", "SubCategory", new { id=item.ID},new { @class=""}) </td>
                                            <td>@item.SubDescription</td>
                                        </tr>
                                    }
                                </tbody>
                            }

                        </table>

                    </div>
                </div>

                <div class="pro-img-list">
                    <a href="#">
                        <img src="img/product-list/pro-thumb-1.jpg" alt="">
                    </a>
                    <a href="#">
                        <img src="img/product-list/pro-thumb-2.jpg" alt="">
                    </a>
                    <a href="#">
                        <img src="img/product-list/pro-thumb-3.jpg" alt="">
                    </a>
                    <a href="#">
                        <img src="img/product-list/pro-thumb-1.jpg" alt="">
                    </a>
                </div>
            </div>
            
            <div class="col-md-6"style="">
                <h4 class="pro-d-title">
                    <a href="#" class="">
                        @Model.CategoryName
                    </a>
                </h4>
                <p>
